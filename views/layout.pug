doctype html
html
  head
    title= title
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.1/css/bulma.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="icon", type="image/png", href="/favicon.png")
    script(type="text/javascript" src='/js/form.js')
  body
    header
        <nav class="navbar" role="navigation" aria-label="main navigation">
            <div class="navbar-brand content custom-brand">
                a(href="/")
                    figure.image.is-32x32.logo-brand
                        img(src="/images/logo.png")
                    h1 NewsReader
            </div>
            .navbar-menu.content
                .navbar-start.menu-primary
                    a.navbar-item(href="/favs") Favoritos
                .navbar-start
                    a.navbar-item(href="/feed") Todo
                    a.navbar-item(href="/feed?category=sports") Deportes
                    a.navbar-item(href="/feed?category=technology") Tecnología
                    a.navbar-item(href="/feed?category=science") Ciencia
                .navbar-end
                    form(action="/feed" method="get" class="select is-rounded")
                        <select onchange="this.form.submit()">
                            <option>Elige un idioma</option>
                            <option value="de">Alemán</option>
                            <option value="es">Español</option>
                            <option value="fr">Francés</option>
                            <option value="it">Italiano</option>
                            <option value="pt">Portugués</option>
                            <option value="ru">Ruso</option>
                        </select>
        </nav>
        
        if isFavsPage
            nav.navbar
                .navbar-menu.content
                    span.navbar-item.has-text-weight-bold Categorías de Favoritos
                    a.navbar-item(href="/favs?category=sports") Deportes
                    a.navbar-item(href="/favs?category=technology") Tecnología
                    a.navbar-item(href="/favs?category=science") Ciencia


    block content

    footer#main-footer.content.has-text-centered
        p
            a(href="https://newsapi.org/") Fuente de noticias NewsApi
    

